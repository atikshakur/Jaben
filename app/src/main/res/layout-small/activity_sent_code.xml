<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
    tools:context=".SentCodeActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the code that was sent to"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="8sp"
        android:gravity="center"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp">

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="phone"
            android:background="#ECF7FF"/>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            android:background="#ECF7FF"/>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            android:background="#ECF7FF"/>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            android:background="#ECF7FF"/>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            android:background="#ECF7FF"/>

        <EditText
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_marginLeft="5dp"
            android:background="#ECF7FF"
            android:inputType="phone" />


    </LinearLayout>

    <Button
        android:id="@+id/btn_Continue"
        android:layout_width="130dp"
        android:layout_height="20dp"
        android:text="Continue"
        android:fontFamily="@font/source_sans_pro"
        android:textAllCaps="false"
        android:textSize="8sp"
        android:textColor="#ffffff"
        android:padding="2dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:background="@drawable/button_round_red"/>

    <TextView
        android:id="@+id/txt_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="I didn't get a code"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="8sp"
        android:textColor="#D01A1E"
        android:gravity="center"
        android:layout_marginTop="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tap Continue to accept Facebook's Terms,Data Policy,cookie use and the Privacy Policy of Jaben"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="8sp"
        android:textColor="#787878"
        android:gravity="center"
        android:layout_marginTop="10dp"/>


</LinearLayout>