<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffff">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_margin="10dp"
    tools:context=".GetDiscountsActivity">

    <LinearLayout
        android:id="@+id/layout_friends"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_friends"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/friends_more" />

        <TextView
            android:id="@+id/txt_invite_friends"
            android:layout_below="@id/img_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Friends and Get Discount."
            android:textColor="#373737"
            android:textSize="18sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/txt_description"
            android:layout_below="@id/txt_invite_friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Love Jaben? Your Friends would tool Share the code below- you and every person you refer will each get a free ride up to 50TK. The more friends you refer, the more free trips you get!"
            android:textSize="15sp"
            android:textColor="#9DAEB5"
            android:fontFamily="@font/source_sans_pro"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_invitation_code"
            android:layout_below="@id/txt_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Invitation Code"
            android:textSize="15sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/layout_hcr_button"
            android:layout_below="@id/txt_invitation_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="HRPME"
                android:fontFamily="@font/source_sans_pro_bold"
                android:background="#F6F7F8"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Copy"
                android:fontFamily="@font/source_sans_pro"
                android:textAllCaps="false"
                android:background="#ffffff"
                android:textColor="@color/colorPrimary"
                android:textSize="18sp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_rectangle_red"
                android:text="Share"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


    <View
        android:id="@+id/view_share"
        android:layout_width="match_parent"
        android:layout_below="@id/layout_friends"
        android:layout_height="10dp"
        android:background="#F6F7F8"
        android:layout_marginTop="15dp"/>


    <LinearLayout
        android:id="@+id/layout_foods"
        android:layout_below="@id/view_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:scaleType="fitXY"
            android:src="@drawable/food" />

        <TextView
            android:id="@+id/txt_invite_food"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Invite Friends and Get Discount."
            android:textColor="#373737"
            android:textSize="18sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/txt_description2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share this code with as many of your friends as you want and ask them to use this code for their first food order. Your friends get 100% OFF on delivery fee and you get 20% off upto 100 taka!"
            android:textSize="15sp"
            android:textColor="#9DAEB5"
            android:fontFamily="@font/source_sans_pro"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/txt_invitation_code2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Invitation Code"
            android:textSize="15sp"
            android:fontFamily="@font/source_sans_pro_semibold"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:id="@+id/layout_hcr_button2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <Button
                android:layout_width="130dp"
                android:layout_height="50dp"
                android:text="FATE99D9"
                android:fontFamily="@font/source_sans_pro_bold"
                android:background="#F6F7F8"
                android:textColor="#000000"
                android:textSize="18sp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Copy"
                android:fontFamily="@font/source_sans_pro"
                android:textAllCaps="false"
                android:background="#ffffff"
                android:textColor="#00A14F"
                android:textSize="18sp"/>

            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/button_rectangle_green"
                android:text="Share"
                android:fontFamily="@font/source_sans_pro_semibold"
                android:textColor="#ffffff"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</ScrollView>