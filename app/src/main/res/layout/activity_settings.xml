<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp">

        <ImageView
            android:id="@+id/ndr_image1"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="8dp"
            android:src="@drawable/user_edit"
            android:background="@drawable/background_oval_profile"/>

        <ImageView
            android:id="@+id/ndr_image2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginLeft="220dp"
            android:src="@drawable/settings_edit"
            android:background="@drawable/background_oval_edit"/>

    </LinearLayout>

    <TextView
        android:id="@+id/txt_name"
        android:layout_below="@id/layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NAME"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp" />

    <View
        android:id="@+id/view_faq"
        android:layout_width="340dp"
        android:layout_below="@id/txt_name"
        android:layout_height="3dp"
        android:background="#E3E3E3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/txt_email"
        android:layout_below="@id/view_faq"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EMAIL"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/view_faq2"
        android:layout_width="340dp"
        android:layout_below="@id/txt_email"
        android:layout_height="3dp"
        android:background="#E3E3E3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp"/>

    <TextView
        android:id="@+id/txt_mobile"
        android:layout_below="@id/view_faq2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PHONE NUMBER"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="12sp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"/>

    <View
        android:id="@+id/view_faq3"
        android:layout_width="340dp"
        android:layout_below="@id/txt_mobile"
        android:layout_height="3dp"
        android:background="#E3E3E3"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="12dp" />

    <LinearLayout
        android:id="@+id/layout2"
        android:layout_below="@id/view_faq3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp">

        <TextView
            android:id="@+id/txt_gender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GENDER"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txt_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DATE OF BIRTH"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="12sp"
            android:layout_marginLeft="200dp"/>


    </LinearLayout>

    <View
        android:id="@+id/view_faq4"
        android:layout_width="match_parent"
        android:layout_below="@id/layout2"
        android:layout_height="15dp"
        android:background="#E3E3E3" />

    <TextView
        android:id="@+id/txt_permissions"
        android:layout_below="@id/view_faq4"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:text="   Permissions"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="17sp"
        android:textColor="#11313A"
        android:padding="12dp"
        android:drawableLeft="@drawable/permissions" />

    <View
        android:id="@+id/view_faq5"
        android:layout_width="match_parent"
        android:layout_below="@id/txt_permissions"
        android:layout_height="15dp"
        android:background="#E3E3E3" />

    <TextView
        android:id="@+id/txt_logout"
        android:layout_below="@id/view_faq5"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#ffffff"
        android:text="   Log Out"
        android:fontFamily="@font/source_sans_pro"
        android:textSize="17sp"
        android:textColor="#11313A"
        android:padding="12dp"
        android:drawableLeft="@drawable/logout" />



</RelativeLayout>