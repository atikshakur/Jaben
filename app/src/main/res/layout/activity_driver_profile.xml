<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DriverProfileActivity">

    <LinearLayout
        android:id="@+id/image1"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:gravity="center"
        android:background="@drawable/background_red_gradient"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="55dp">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/call"
                android:background="@drawable/background_oval_deep_red"
                android:padding="20dp"
                android:layout_gravity="center"
                android:layout_marginRight="30dp"/>

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="8dp"
                android:src="@drawable/index_page_img1"
                android:background="@drawable/circle_border_background" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/message"
                android:background="@drawable/background_oval_deep_red"
                android:padding="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mr.Aman"
            android:textColor="#ffffff"
            android:textSize="25sp"
            android:fontFamily="@font/source_sans_pro"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Passenger"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:fontFamily="@font/source_sans_pro"/>

        <LinearLayout
            android:layout_width="420dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:layout_marginTop="25dp">

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:background="#ff4c4c"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    Completed Rides"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="210dp"
                android:layout_height="70dp"
                android:background="#D01A1E"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D01A1E"
                    android:text="Joined Since"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#D01A1E"
                    android:text="09/04/2019"
                    android:fontFamily="@font/source_sans_pro"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#D01A1E"
                android:text="Joined Since-09/04/2019"
                android:gravity="center"
                android:fontFamily="@font/source_sans_pro"
                android:textColor="#ffffff"
                android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@id/image1"
        android:background="#ffffff">

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/source_sans_pro"
            android:text="Location "
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:textColor="#D01A1E"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/txt_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:fontFamily="@font/source_sans_pro"
            android:text="GEC-Lalkhan bazar"
            android:textSize="18sp" />

        <View
            android:id="@+id/view_level_one"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/txt_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="Rating"
            android:textColor="#D01A1E"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/txt_rating1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:text="100%"
            android:fontFamily="@font/source_sans_pro"
            android:textSize="18sp"/>

        <View
            android:id="@+id/view_level_two"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9"
            android:layout_marginTop="5dp"/>

        <Button
            android:id="@+id/ndr_btn"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:background="@drawable/button_rectangle_red"
            android:fontFamily="@font/source_sans_pro_bold"
            android:text="Send Your Ride Request"
            android:textColor="#ffffff"
            android:textSize="20sp" />

    </LinearLayout>

</RelativeLayout>