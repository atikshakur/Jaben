<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MoreFragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/set_toolbar"
        android:id="@+id/more"
        android:background="#ffffff">

        <LinearLayout
            android:id="@+id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:orientation="vertical">

        </LinearLayout>

        <View
            android:id="@+id/view_level_one"
            android:layout_below="@id/profile_image"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />

        <LinearLayout
            android:id="@+id/layout_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/view_level_one"
            android:layout_marginTop="0dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_notifications_black_24dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Notifications"
                android:textColor="#484848"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_promotions"
            android:layout_below="@id/layout_notification"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/promotion_red"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Promotions"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_settings"
            android:layout_below="@id/layout_promotions"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_settings_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Settings"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/layout_help"
            android:layout_below="@id/layout_settings"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_help_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Help"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <View
            android:id="@+id/view_level_two"
            android:layout_below="@id/layout_help"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />


        <LinearLayout
            android:id="@+id/layout_policies"
            android:layout_below="@id/view_level_two"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_policies_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Policies"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_logout"
            android:layout_below="@id/layout_policies"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:padding="7dp">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_logout_black_24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Log Out"
                android:textSize="18sp"
                android:textColor="#484848" />

        </LinearLayout>

        <View
            android:id="@+id/view_level_three"
            android:layout_below="@id/layout_policies"
            android:layout_width="match_parent"
            android:layout_height="7dp"
            android:background="#F6F7F9" />


    </RelativeLayout>

</FrameLayout>