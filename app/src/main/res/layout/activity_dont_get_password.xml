<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".DontGetPasswordActivity">

    <TextView
        android:id="@+id/txt_gotten_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="If you haven't gotten a code:"
        android:textSize="20sp"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"/>

    <LinearLayout
        android:id="@+id/layout_mobile_sms"
        android:layout_below="@id/txt_gotten_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/mobile_get_code"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verify your mobile number"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

                <TextView
                    android:id="@+id/txt_verify_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+8801754337576"
                    android:textColor="#FF000C"
                    android:textSize="18sp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/source_sans_pro"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:src="@drawable/sms_inbox"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Check your SMS inbox"
                android:textSize="18sp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/source_sans_pro"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_code"
        android:layout_below="@id/layout_mobile_sms"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_round_red"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Send SMS Again in 108"
        android:textColor="#ffffff"/>

</RelativeLayout>